{
	"compilerOptions": {
		"outDir": "build",
		"declaration": true,
		"declarationDir": "build/types",
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"allowJs": true,
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"src/__manual_tests__",
		"src/__tests__"
	]
}
